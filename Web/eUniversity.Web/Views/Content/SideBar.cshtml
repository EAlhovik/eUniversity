@using eUniversity.Web.Infrastructure.Constants
@using eUniversity.Web.Extensions
<div class="sidebar" id="sidebar">
    <ul class="nav nav-list">
        @{
            var ajaxOptions = new AjaxOptions()
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "loading",
                    UpdateTargetId = "pageContent",
                    OnBegin = "OnBegin"
                };
        }
        <li class="active">
            @Ajax.RawActionLink("<i class='icon-dashboard'></i><span class='menu-text'>Dashboard </span>", ActionNames.IndexAction, ControllerNames.DashboardController, ajaxOptions)
        </li>
        <li>
            @Ajax.RawActionLink("<i class='icon-list-alt'></i><span class='menu-text'>Специальности </span>", ActionNames.IndexAction, ControllerNames.SpecialityController, ajaxOptions)
        </li>
        <li>
            @Ajax.RawActionLink("<i class='icon-list-alt'></i><span class='menu-text'>Специализации </span>", ActionNames.IndexAction, ControllerNames.SpecializationController, ajaxOptions)
        </li>
        <li>
            <a href="#" class="dropdown-toggle">
                <i class="icon-list-alt"></i>
                <span class='menu-text'> Учебный план </span><b class="arrow icon-angle-down"></b>
            </a>
            <ul class="submenu">
                <li>
                    @Ajax.RawActionLink("<i class='icon-plus'></i>Добовить Новый", ActionNames.EditAction, ControllerNames.CurriculumController, ajaxOptions)
                </li>

                <li>
                    @Ajax.RawActionLink("<i class='icon-eye-open'></i>Список Учебных Планов", ActionNames.IndexAction, ControllerNames.CurriculumController, ajaxOptions)
                </li>
            </ul>
        </li>
        <li>
            @Ajax.RawActionLink("<i class='icon-list-alt'></i><span class='menu-text'>Группы </span>", ActionNames.IndexAction, ControllerNames.GroupController, ajaxOptions)
        </li>
        <li>
            <a href="#" class="dropdown-toggle">
                <i class="icon-list-alt"></i>
                <span class='menu-text'> Предметы </span><b class="arrow icon-angle-down"></b>
            </a>
            <ul class="submenu">
                <li>
                    @Ajax.RawActionLink("<i class='icon-eye-open'></i>Список Учебных Предметов", ActionNames.IndexAction, ControllerNames.SubjectController, ajaxOptions)
                </li>
            </ul>
        </li>
        <li>
            @Ajax.RawActionLink("<i class='icon-list-alt'></i><span class='menu-text'>Темы </span>", ActionNames.IndexAction, ControllerNames.ThemeController, ajaxOptions)
        </li>
        <li>
            @Ajax.RawActionLink("<i class='icon-group'></i><span class='menu-text'>Пользователи </span>", ActionNames.IndexAction, ControllerNames.MembershipController, ajaxOptions)
        </li>
    </ul>

    <div class="sidebar-collapse" id="sidebar-collapse">
        <i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i>
    </div>
</div>
