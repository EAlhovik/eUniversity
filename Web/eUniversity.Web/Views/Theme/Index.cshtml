
@model eUniversity.Business.ViewModels.GridViewModel

@{
    ViewBag.PageHeader = "Темы";
    ViewBag.AdditionalInfo = "Список тем";
    if (Request.IsAjaxRequest())
    {
        Layout = null;
    }
}
@Html.Partial("_PageHeader")
<div class="row" id="grid">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="center">
                            <label>
                                <input type="checkbox" class="ace" data-bind="checked: IfAllSelected">
                                <span class="lbl"></span>
                            </label>
                        </th>
                        <th>Name</th>
                        <th>Description</th>

                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                            Update
                        </th>
                        <th class="hidden-480">Status</th>

                        <th>
                            <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="#">
                                    <i class="icon-save bigger-130" data-bind="click: SaveSelected"></i>
                                </a>

                                <a class="red" href="#">
                                    <i class="icon-trash bigger-130" data-bind="click: RemoveSelected"></i>
                                </a>
                            </div>

                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                <div class="inline position-relative open">
                                    <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-caret-down icon-only bigger-120"></i>
                                    </button>
                                    <div class="dropdown-backdrop"></div>

                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                        <li>
                                            <a href="#" class="tooltip-info" data-rel="tooltip" title="" data-original-title="View">
                                                <span class="blue">
                                                    <i class="icon-save bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>

                                        <li>
                                            <a href="#" class="tooltip-error" data-rel="tooltip" title="" data-original-title="Delete">
                                                <span class="red">
                                                    <i class="icon-trash bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </th>
                    </tr>
                </thead>

                <tbody>
                    <!-- ko foreach: Rows -->
                    <tr>
                        <td class="center">
                            <label>
                                <input type="checkbox" class="ace" data-bind="checked: IsSelected">
                                <span class="lbl"></span>
                            </label>
                        </td>
                        <td>
                            <span data-bind="editable: Name"></span>
                        </td>
                        <td>
                            <span data-bind="editable: Description, editableOptions: { type: 'textarea' }"></span>
                        </td>
                        <td>Feb 12</td>

                        <td class="hidden-480">
                            <span class="label label-sm label-warning">Draft</span>
                        </td>

                        <td>
                            <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="#">
                                    <i class="icon-save bigger-130" data-bind="click: Save"></i>
                                </a>

                                <a class="red" href="#">
                                    <i class="icon-trash bigger-130" data-bind="click: $parent.Remove"></i>
                                </a>
                            </div>

                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                <div class="inline position-relative open">
                                    <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-caret-down icon-only bigger-120"></i>
                                    </button>
                                    <div class="dropdown-backdrop"></div>

                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                        <li>
                                            <a href="#" class="tooltip-info" data-rel="tooltip" title="" data-original-title="View">
                                                <span class="blue">
                                                    <i class="icon-save bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>

                                        <li>
                                            <a href="#" class="tooltip-error" data-rel="tooltip" title="" data-original-title="Delete">
                                                <span class="red">
                                                    <i class="icon-trash bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <!-- /ko -->
                </tbody>
            </table>
        </div>
        <h4 class="pink">
            <i class="icon-hand-right icon-animated-hand-pointer blue"></i>
            <a href="#" role="button" class="green" data-bind="click: AddNewRow">Добавить Тему</a>
        </h4>
    </div>
</div>

<script src="~/Scripts/viewModels/gridViewModel.js"> </script>
<script src="~/Scripts/viewModels/theme/themeRowViewModel.js"> </script>

<script type="text/javascript">
    $(document).ready(function () {
        ko.applyBindings(new GridViewModel(@Html.Raw(Json.Encode(Model))), $('#grid').get(0));
    });
</script>
