@model eUniversity.Business.ViewModels.GridViewModel

@{
    ViewBag.PageHeader = "Предметы";
    ViewBag.AdditionalInfo = "Список учебных предметов";
    if (Request.IsAjaxRequest())
    {
        Layout = null;
    }
}
@Html.Partial("_PageHeader")

<div class="row" id="grid">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="center" style="width: 50px;">
                            <label>
                                <input type="checkbox" class="ace" data-bind="checked: IfAllSelected">
                                <span class="lbl"></span>
                            </label>
                        </th>
                        <th>Subject Name</th>
                        <th>SemesterNumber</th>
                        <th>CurriculumName</th>

                        <th>
                            SpecializationName
                        </th>
                        <th>
                            Themes
                        </th>
                        <th class="hidden-480">Status</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko foreach: Rows -->
                    <tr>
                        <td class="center">
                            <label>
                                <input type="checkbox" class="ace" data-bind="checked: IsSelected">
                                <span class="lbl"></span>
                            </label>
                        </td>
                        <td data-bind="text: SubjectName">
                            @*<a href="#" data-bind="text: Name, attr: { href: EditGroupUrl }"></a>*@
                        </td>
                        <td data-bind="text: SemesterNumber"></td>
                        <td data-bind="text: CurriculumName"></td>
                        <td data-bind="text: SpecializationName"></td>
                        <td >
                            <a data-bind="editable: Themes, editableOptions: { type: 'select2', select2: select2 }" data-type="select2" data-pk="1" data-title="Select speciality"></a>
                        </td>

                        <td class="hidden-480">
                            <span class="label label-sm label-warning">Expiring</span>
                        </td>
                        <th></th>
                    </tr>
                    <!-- /ko -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/viewModels/gridViewModel.js"> </script>
<script src="~/Scripts/viewModels/subject/subjectRowViewModel.js"> </script>

<script type="text/javascript">
    $(document).ready(function () {
        ko.applyBindings(new GridViewModel(@Html.Raw(Json.Encode(Model))), $('#grid').get(0));
    });
</script>