    <ul class="nav nav-list">
        <li class="active">
            <a href="http://192.69.216.111/themes/preview/ace/index.html">
                <i class="icon-dashboard"></i>
                <span class="menu-text">Dashboard </span>
            </a>
        </li>
        @{
            var ajaxOptions = new AjaxOptions()
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "loading",
                    UpdateTargetId = "pageContent",
                    OnBegin = "OnBegin"
                };
        }

        <li>
            @Ajax.RawActionLink("<i class='icon-list-alt'></i><span class='menu-text'>Специальности </span>", ActionNames.IndexAction, ControllerNames.SpecialityController, ajaxOptions)
