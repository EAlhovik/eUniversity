            </ul>
        </li>
        <li>
            @Ajax.RawActionLink("<i class='icon-list-alt'></i><span class='menu-text'>Темы </span>", ActionNames.IndexAction, ControllerNames.ThemeController, ajaxOptions)
        </li>
        <li>
            @Ajax.RawActionLink("<i class='icon-group'></i><span class='menu-text'>Пользователи </span>", ActionNames.IndexAction, ControllerNames.MembershipController, ajaxOptions)
