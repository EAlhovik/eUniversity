        <li>
            @Ajax.RawActionLink("<i class='icon-list-alt'></i><span class='menu-text'>Специализации </span>", ActionNames.IndexAction, ControllerNames.SpecializationController, ajaxOptions)
        </li>
        <li>
            <a href="#" class="dropdown-toggle">
                <i class="icon-list-alt"></i>
                <span class='menu-text'> Учебный план </span><b class="arrow icon-angle-down"></b>
            </a>
            <ul class="submenu">
                <li>
                    @Ajax.RawActionLink("<i class='icon-plus'></i>Добовить Новый", ActionNames.EditAction, ControllerNames.CurriculumController, ajaxOptions)
