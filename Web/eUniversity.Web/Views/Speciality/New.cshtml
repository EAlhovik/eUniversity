@{
    ViewBag.PageHeader = "Специальность";
    ViewBag.AdditionalInfo = "Добавление новой специальности";
}
@Html.Partial("_PageHeader")
<div class="row">
    <div class="col-xs-12">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">Название</label>

                <div class="col-sm-9">
                    <input type="text" placeholder="Специальность" class="col-xs-10 col-sm-5">
                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">Описание</label>
                <div class="col-sm-9">
                    <textarea class="col-xs-10 col-sm-5" placeholder="Описание" style="height: 52px; padding-left: 5px;"></textarea>
                </div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="button">
                        <i class="icon-ok bigger-110"></i>
                        Сохранить
                    </button>

                    &nbsp; &nbsp; &nbsp;
				<button class="btn" type="reset">
                    <i class="icon-undo bigger-110"></i>
                    Сбросить
                </button>
                </div>
            </div>
        </form>
    </div>
</div>
