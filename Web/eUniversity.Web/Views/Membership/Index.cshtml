@{
    ViewBag.PageHeader = "Пользователи";

    ViewBag.AdditionalInfo = "Список пользователей";

    if (Request.IsAjaxRequest())
    {
        Layout = null;
    }
}
@Html.Partial("_PageHeader")
<div class="row" id="membershipList">
    <div class="col-xs-12">

        <div class="table-responsive">
            <div class="ui-jqgrid-view">
                <div class="ui-jqgrid-titlebar ui-widget-header"><a role="link" href="javascript:void(0)" style="right: 0px;"><span class="ui-icon ui-icon-circle-triangle-n"></span></a><span class="ui-jqgrid-title">jqGrid with inline editing</span></div>
            </div>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="center" style="width: 50px;">
                            <label>
                                <input type="checkbox" class="ace" data-bind="checked: IsAllSelected">
                                <span class="lbl"></span>
                            </label>
                        </th>
                        <th>@eUniversity.Common.Strings.Resources.Common_Name</th>

                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                            @eUniversity.Common.Strings.Resources.Common_Create
                        </th>
                        <th class="hidden-480">@eUniversity.Common.Strings.Resources.Common_Status</th>

                        <th style="width: 100px;">
                            <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                <div data-bind="visible: IsAnySelected">
                                    @ActionBtn("icon-plus-sign", "green", "data-bind='click: ApproveUser'", eUniversity.Common.Strings.Resources.Membersip_ActivateAccount)
                                    @ActionBtn("icon-trash", "red", "data-bind='click: DeleteUser'", eUniversity.Common.Strings.Resources.Membersip_DeleteAccount)
                                </div>
                            </div>
                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                <div class="inline position-relative open">
                                    <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-bind="visible: IsAnySelected">
                                        <i class="icon-caret-down icon-only bigger-120"></i>
                                    </button><div class="dropdown-backdrop"></div>

                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">

                                        <li>
                                            @ActionBtn("icon-plus-sign", "green", "data-bind='click: ApproveUser'", eUniversity.Common.Strings.Resources.Membersip_ActivateAccount)
                                        </li>

                                        <li>
                                            @ActionBtn("icon-trash", "red", "data-bind='click: DeleteUser'", eUniversity.Common.Strings.Resources.Membersip_DeleteAccount)
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko foreach: Users -->
                    <tr>
                        <td class="center">
                            <label>
                                <input type="checkbox" class="ace" data-bind="checked: IsSelected">
                                <span class="lbl"></span>
                            </label>
                        </td>
                        <td>
                            <a href="#" data-bind="text: UserName"></a>
                        </td>
                        <td>Feb 12</td>

                        <td class="hidden-480">
                            <span class="label label-sm label-warning" data-bind="text: StatusDisplay, css:{'label-warning':!self.IsApproved,'label-success':self.IsApproved}"></span>
                        </td>

                        <td>
                            <div class="actionBtns">
                                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">

                                    @ActionBtn("icon-zoom-in", "blue", "data-bind='click: ShowProfile'", eUniversity.Common.Strings.Resources.Membersip_ShowProfile)

                                    @ActionBtn("icon-plus-sign", "green", "data-bind='click: ApproveUser'", eUniversity.Common.Strings.Resources.Membersip_ActivateAccount)


                                    @ActionBtn("icon-trash", "red", "data-bind='click: DeleteUser'", eUniversity.Common.Strings.Resources.Membersip_DeleteAccount)

                                </div>
                            </div>

                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                <div class="inline position-relative open">
                                    <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-caret-down icon-only bigger-120"></i>
                                    </button><div class="dropdown-backdrop"></div>

                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                        <li>
                                            @ActionBtn("icon-trash", "red", "data-bind='click: DeleteUser'", eUniversity.Common.Strings.Resources.Membersip_DeleteAccount)
                                        </li>

                                        <li>
                                            @ActionBtn("icon-plus-sign", "green", "data-bind='click: ApproveUser'", eUniversity.Common.Strings.Resources.Membersip_ActivateAccount)
                                        </li>

                                        <li>
                                            @ActionBtn("icon-trash", "red", "data-bind='click: DeleteUser'", eUniversity.Common.Strings.Resources.Membersip_DeleteAccount)
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <!-- /ko -->
                </tbody>
            </table>
        </div>
    </div>
</div>

