<div class="step-pane" data-bind="css: { active: IsActive, complete: IsCompleted }">
    <h3 class="lighter block green">Предметы</h3>
    <!-- ko foreach: Subjects -->
    <div class="subject-activity clearfix">
        <div class="col-xs-12 col-sm-offset-3 col-sm-3">
            <div>
                <a class="subject" href="#" data-bind="text: SubjectNameDisplay, click:ShowSubject"></a>
                &nbsp;-&nbsp;<span data-bind="text: SubjectTypeDisplay"></span>.&nbsp;
            </div>

            <div class="tools action-buttons">
                <a href="#" class="blue" data-bind="click: ShowSubject">
                    <i class="icon-pencil bigger-125"></i>
                </a>

                <a href="#" class="red" data-bind="click: $parent.RemoveSubject">
                    <i class="icon-remove bigger-125"></i>
                </a>
            </div>
        </div>
    </div>
    <!-- /ko -->
    <div class="form-group">
        <div class="col-xs-12 col-sm-5 col-sm-offset-3">
            <h4 class="pink">
                <i class="icon-hand-right icon-animated-hand-pointer blue"></i>
                <a href="#" role="button" class="green" data-bind="click: AddSubject">Добавить предмет</a>
            </h4>
        </div>
    </div>
</div>