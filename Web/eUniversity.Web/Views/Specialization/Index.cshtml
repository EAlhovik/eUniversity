@model eUniversity.Business.ViewModels.GridViewModel
@{
    ViewBag.PageHeader = "Специализация";
    ViewBag.AdditionalInfo = "Список специализаций";
    if (Request.IsAjaxRequest())
    {
        Layout = null;
    }
}
@Html.Partial("_PageHeader")
<div class="row" id="grid">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="center">
                            <label>
                                <input type="checkbox" class="ace" data-bind="checked: IsAllSelected">
                                <span class="lbl"></span>
                            </label>
                        </th>
                        <th>Name</th>
                        <th>Description</th>

                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                            Update
                        </th>
                        <th class="hidden-480">Status</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko foreach: Rows -->
                    <tr>
                        <td class="center">
                            <label>
                                <input type="checkbox" class="ace" data-bind="checked: IsSelected">
                                <span class="lbl"></span>
                            </label>
                        </td>
                        <td>
                            <a href="#" data-bind="text: Name, attr: { href: EditSpecializationUrl }"></a>
                        </td>
                        <td data-bind="text: Description"></td>
                        <td>Feb 12</td>

                        <td class="hidden-480">
                            <span class="label label-sm label-warning">Expiring</span>
                        </td>

                        <td>
                            <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="#">
                                    <i class="icon-zoom-in bigger-130"></i>
                                </a>

                                <a class="green" href="#">
                                    <i class="icon-pencil bigger-130"></i>
                                </a>

                                <a class="red" href="#">
                                    <i class="icon-trash bigger-130"></i>
                                </a>
                            </div>

                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                <div class="inline position-relative open">
                                    <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-caret-down icon-only bigger-120"></i>
                                    </button><div class="dropdown-backdrop"></div>

                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                        <li>
                                            <a href="#" class="tooltip-info" data-rel="tooltip" title="" data-original-title="View">
                                                <span class="blue">
                                                    <i class="icon-zoom-in bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>

                                        <li>
                                            <a href="#" class="tooltip-success" data-rel="tooltip" title="" data-original-title="Edit">
                                                <span class="green">
                                                    <i class="icon-edit bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>

                                        <li>
                                            <a href="#" class="tooltip-error" data-rel="tooltip" title="" data-original-title="Delete">
                                                <span class="red">
                                                    <i class="icon-trash bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <!-- /ko -->
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Scripts/viewModels/gridViewModel.js"> </script>
<script src="~/Scripts/viewModels/specialization/specializationRowViewModel.js"> </script>

<script type="text/javascript">
    $(document).ready(function () {
        ko.applyBindings(new GridViewModel(@Html.Raw(Json.Encode(Model))), $('#grid').get(0));
    });
</script>